<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>Gun_GWBWastelandRifleWireframe</defName>
    <label>Wireframe Wasteland Rifle</label>
    <description>The standard issue weapon is an assault rifle with a wireframe stock. The rifle loosely resembles a SIG SG 551/553, and can mount a scope as seen with the Sniper's weapon.</description>
    <graphicData>
      <texPath>Things/Weapons/WastelandRifle/WireframeWastelandRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
    </recipeMaker>
    <statBases>
      <WorkToMake>4000</WorkToMake>
      <Mass>3.0</Mass>
      <AccuracyTouch>0.45</AccuracyTouch>
      <AccuracyShort>0.60</AccuracyShort>
      <AccuracyMedium>0.55</AccuracyMedium>
      <AccuracyLong>0.50</AccuracyLong>
      <RangedWeapon_Cooldown>1.0</RangedWeapon_Cooldown>
    </statBases>
    <costList>
      <Steel>45</Steel>
      <ComponentIndustrial>4</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_GWBWastelandRifle</defaultProjectile>
        <warmupTime>0.5</warmupTime>
        <range>31</range>
        <burstShotCount>3</burstShotCount>
        <ticksBetweenBurstShots>7</ticksBetweenBurstShots>
        <soundCast>Shot_Minigun</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <weaponTags>
      <li>GWBWastelandSimple</li>
    </weaponTags>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>1.8</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>10</power>
        <cooldownTime>1.9</cooldownTime>
      </li>
    </tools>
  </ThingDef>
</Defs>